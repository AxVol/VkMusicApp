<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VKMusicApp.Resources.Styles.CustomStyle">

    <Style x:Key="LoginBtn" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>

    <Style x:Key="LoginLabel" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <Style x:Key="LoginEntry" TargetType="Entry">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>

    <Style x:Key="NavigationPanel" TargetType="Border">
        <Setter Property="Stroke" Value="Black"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="BackgroundColor" Value="#2C2E44"/>
        <Setter Property="Background" Value="#2C2E44"/>
        <Setter Property="Margin" Value="-2"/>
    </Style>

    <Style x:Key="PanelLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,30,0,0"/>
    </Style>
        
    <Style x:Key="PanelImage" TargetType="Image">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,30"/>
    </Style>

    <Style x:Key="SearchBox" TargetType="Entry">
        <Setter Property="IsTextPredictionEnabled" Value="True"/>
        <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>

    <Style x:Key="MusicPreviewText" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style x:Key="PlayerButton" TargetType="ImageButton">
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
    </Style>

    <Style x:Key="PlayerText" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
</ResourceDictionary>