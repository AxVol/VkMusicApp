<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:media="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:VKMusicApp.ViewModels"
             x:Class="VKMusicApp.Pages.AudioPlayerPage"
             x:DataType="vm:SearchMusicViewModel"
             Shell.NavBarIsVisible="False">
    
    <Grid>
        <Label BackgroundColor="White"
               VerticalOptions="Start"
               FontSize="12"
               x:Name="label1"/>
        <media:MediaElement
            x:Name="mediaElement" 
            IsVisible="false"
            HeightRequest="500"
            Source="embed://nf_running.mp3" />
        <Button 
            x:Name="PlayAudio"
            HeightRequest="100"
            Clicked="OnClicked"/>
    </Grid>
    
</ContentPage>
